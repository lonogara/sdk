{
  "name": "ligure-tool",
  "version": "0.0.1",
  "private": true,
  "repository": "kthjm/ligure-tool",
  "author": "kthjm <toxictoxer@gmail.com>",
  "main": "index.js",
  "dependencies": {
    "atra": "^1.1.0",
    "babel-runtime": "^6.26.0",
    "create-keyframes": "^1.0.1",
    "hast-util-select": "^1.0.1",
    "rehype-img-as": "^0.0.5",
    "rehype-minify-whitespace": "^2.0.3",
    "rehype-parse": "^4.0.0",
    "rehype-raw": "^2.0.0",
    "rehype-react": "^3.0.1",
    "rehype-stringify": "^3.0.0",
    "remark-parse": "^4.0.0",
    "remark-rehype": "^2.0.1",
    "unified": "^6.1.5"
  },
  "scripts": {
    "//pretest": "flow",
    "nycha": "cross-env NODE_ENV=test nyc --clean mocha",
    "test:build": "yarn nycha ./build/test",
    "test:button": "yarn nycha ./button/test",
    "test:preloader": "yarn nycha ./preloader/test",
    "test:supplier": "yarn nycha ./supplier/test",
    "test:toreact": "yarn nycha ./toreact/test",
    "test": "yarn nycha ./build/test ./button/test ./preloader/test ./supplier/test ./toreact/test",
    "codecov": "nyc report --reporter=lcov | codecov --disable=gcov",
    "//prebuild": "yarn test",
    "compile": "cross-env NODE_ENV=build babel",
    "build:build": "yarn compile ./build/src -d ./build/lib",
    "build:button": "yarn compile ./button/src -d ./button/lib",
    "build:preloader": "yarn compile ./preloader/src -d ./preloader/lib",
    "build:toreact": "yarn compile ./toreact/src -d ./toreact/lib",
    "build:supplier": "yarn compile ./supplier/src -d ./supplier/lib",
    "build": "run-s build:build build:button build:preloader build:supplier build:toreact",
    "postbuild": "yarn format",
    "format": "prettier --write **/*.js",
    "node": "cross-env NODE_ENV=play node -r babel-register"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-rewire": "^1.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.24.1",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "flow-bin": "^0.57.3",
    "flow-typed": "^2.2.1",
    "jsdom": "^11.3.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.1.0",
    "power-assert": "^1.4.4",
    "prettier": "^1.7.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.0.0",
    "rewire": "^2.5.2",
    "sinon": "^4.0.1"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "nyc": {
    "require": [
      "babel-register",
      "jsdom-global/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "babel": {
    "env": {
      "build": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions",
                  "safari >= 7"
                ]
              }
            }
          ],
          "flow",
          "react"
        ],
        "plugins": [
          "transform-runtime"
        ]
      },
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ],
          "flow",
          "react"
        ],
        "plugins": [
          "istanbul",
          [
            "espower",
            {
              "embedAst": true
            }
          ],
          "empower-assert"
        ]
      },
      "play": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "browsers": [
                  "last 2 versions",
                  "safari >= 7"
                ]
              }
            }
          ],
          "react"
        ]
      }
    }
  }
}
